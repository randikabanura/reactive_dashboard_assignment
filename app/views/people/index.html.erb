<p style="color: green"><%= notice %></p>

<div class="row">
  <div class="col-sm-6">
    <h1>People</h1>
  </div>

  <div class="col-sm-6 text-end">
    <%= link_to new_person_path, class: 'btn btn-primary' do %>
      Add New Person
    <% end %>
  </div>
</div>

<% if @people.any? %>
  <div class="table-responsive">
    <table class="table table-striped table-bordered table-hover">
      <thead>
      <tr>
        <th>Name</th>
        <th>Birthdate</th>
        <th>Gender</th>
        <th>Phone</th>
        <th></th>
      </tr>
      </thead>
      <tbody>
      <% @people.each do |person| %>
        <tr>
          <td><%= person.name %></td>
          <td><%= person.birthdate %></td>
          <td><%= person.gender %></td>
          <td><%= person.phone %></td>
          <td><%= link_to "Show this person", person %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
<% else %>
  <div class="text-center">No person is available</div>
<% end %>
