<p style="color: green"><%= notice %></p>

<div class="row">
  <div class="col-sm-6">
    <h1>People</h1>
  </div>

  <div class="col-sm-6 text-end">
    <%= link_to new_person_path, class: 'btn btn-primary' do %>
      Add New Person
    <% end %>
  </div>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
    <tr>
      <th>Name</th>
      <th>Birthdate</th>
      <th>Gender</th>
      <th>Phone</th>
      <th></th>
    </tr>
    </thead>
    <tbody>
    <% @people.each do |person| %>
      <%= render 'table_row', person: person %>
    <% end %>
    </tbody>
  </table>
</div>


<div class="container">
  <h2>Latest Created Events</h2>
  <div id="events_card_container">
    <% @events.each do |event| %>
      <%= render 'events/event_card', event: event %>
    <% end %>
  </div>
</div>